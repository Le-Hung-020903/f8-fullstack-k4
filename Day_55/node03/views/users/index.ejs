<h1>Danh sách người dùng</h1>
<a href="/users/add" class="btn btn-primary">Thêm mới</a>
<form action="" class="mb-3 mt-3">
    <div class="row">
        <div class="col-3">
            <select name="status" class="form-select">
                <option value="all">All</option>
                <option value="active">Kich hoat</option>
                <option value="inactive">Chua kich hoat</option>
            </select>
        </div>
        <div class="col-7">
            <input type="text" name="keyword" class="form-control" placeholder="Search">
        </div>
        <div class="col-2 d-grid">
            <button class="btn btn-primary">Tìm Kiếm</button>
        </div>
    </div>
</form>
<table class="table table-bordered">
  <thead>
    <tr>
      <th width="5%">STT</th>
      <th>Tên</th>
      <th>Email</th>
      <th>Trạng thái</th>
      <th width="5%">Sửa</th>
      <th width="5%">Xóa</th>
    </tr>
  </thead>
  <tbody>
   
      <% users.forEach((user,index) => { %>
        <tr>
        <td><%= index + 1 %></td>
        <td><%= user.name %></td>
        <td><%= user.email%></td>
        <td <%= user.status ? 'Kich hoat' :  'Chua kich hoat' %>></td>
        <td><a href="/users/edit/<%= user.id %>" class="btn btn-warning">Sửa</a></td>
        <td><a href="/users/delete/<%= user.id %>" class="btn btn-danger">Xóa</a></td>
    </tr>
      <% }) %>
    
  </tbody>
</table>
