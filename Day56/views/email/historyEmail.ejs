<div class="d-flex justify-content-between align-items-center">
  <h1>Lịch sử email</h1>
  <a href="/email/email" class="btn btn-primary">Quay lại</a>
</div>
<table class="table table-bordered">
  <thead>
    <tr>
      <th width="5%">STT</th>
      <th>Email gửi đến</th>
      <th>Tiêu đề</th>
      <th>Trạng thái</th>
      <th>Thời gian gửi</th>
      <th width="15%">Xem chi tiết</th>
    </tr>
  </thead>
  <tbody>
    <% emails.forEach((email, index) => { %>
    <tr>
      <td><%= index + 1 %></td>
      <td><%= email.email_address %></td>
      <td><%= email.title %></td>
      <td><%= email.status ? 'Đã đọc' : 'Chưa đọc' %></td>
      <td><%= new Date(email.created_at).toLocaleString() %></td>
      <td>
        <a href="/email/contentEmail/<%= email.id %>" class="btn btn-secondary"
          >Xem chi tiết</a
        >
      </td>
    </tr>
    <% }) %>
  </tbody>
</table>
