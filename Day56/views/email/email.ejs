<div class="d-flex justify-content-between align-item-center">
  <h1>Thư mới</h1>
  <a href="/email/historyEmail" class="btn btn-primary">Lịch sử</a>
</div>

<form method="post">
  <div class="mb-3">
    <label for="exampleInputEmail1" class="form-label">Đến</label>
    <input
      type="email"
      class="form-control"
      id="exampleInputEmail1"
      name="email_address"
      placeholder="name@example.com"
      aria-describedby="emailHelp"
    />
    <span class="mt-2 text-danger"><%= req?.errors?.email_address %></span>
  </div>
  <div class="mb-3">
    <label for="exampleInputEmail1" class="form-label">Chủ đề</label>
    <input
      type="text"
      class="form-control"
      name="email_title"
      placeholder="Title"
    />
    <span class="mt-2 text-danger"><%= req?.errors?.email_title %></span>
  </div>
  <div class="mb-3">
    <div class="form-floating">
      <textarea
        class="form-control"
        name="email_content"
        placeholder="Leave a comment here"
        id="floatingTextarea2"
        style="height: 100px"
      ></textarea>
      <label for="floatingTextarea2">Content</label>
    </div>
  </div>
  <button type="submit" class="btn btn-primary mt-3">Gửi Email</button>
</form>
