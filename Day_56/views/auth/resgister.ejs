<h1>Đăng ký</h1>

<form class="mb-4" action="" method="post">
  <div class="mb-4">
    <label for="name" class="mb-2">Name</label>
    <input
      type="text"
      name="name"
      id="name"
      class="form-control"
      placeholder="Your Name..."
      value="<%= req?.olds?.name %>"
    />
    <span class="mt-2 text-danger"> <%= req?.errors?.name %> </span>
  </div>
  <div class="mb-4">
    <label for="email" class="mb-2">Email</label>
    <input
      type="text"
      name="email"
      id="email"
      class="form-control"
      placeholder="Your Email..."
    />
    <span class="mt-2 text-danger"> <%= req?.errors?.email %> </span>
  </div>
  <div class="mb-4">
    <label for="password">Password</label>
    <input
      type="password"
      name="password"
      id="password"
      class="form-control"
      placeholder="Your Password..."
    />
    <span class="mt-2 text-danger"> <%= req?.errors?.password %> </span>
  </div>
  <div class="mb-4">
    <label for="password">Status</label>
    <select name="status" id="" class="form-select">
      <option value="0">Chưa kích hoạt</option>
      <option value="1">Kích hoạt</option>
    </select>
    <span class="mt-2 text-danger"> <%= req?.errors?.status %> </span>
  </div>
  <button class="btn btn-primary">Đăng Ký</button>
  <a href="/auth/login" class="btn btn-warning">Quay lại</a>
</form>
